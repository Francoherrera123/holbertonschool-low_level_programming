#include "main.h"
#include <stdio.h>

/**
 * print_diagonal - Write a function that draws a diagonal line on the terminal.
 *
 *@n: number
 *
 */
void print_diagonal(int n)
{
	int i:
	if(n == 0)
	{
		 _putchar(92);
	}
	else
	{	
		for (i = 0; i < n; i++)
		{
			_putchar(32);
		}
		_putchar(92);
		_putchar('\n');
	}
}
